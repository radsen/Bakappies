<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/corner_radius"
                android:bottomRightRadius="@dimen/corner_radius"/>
            <solid android:color="@color/border_color"/>
        </shape>
    </item>
    <item android:left="@dimen/border" android:bottom="@dimen/border" android:right="@dimen/border">
        <shape android:shape="rectangle">
            <padding android:left="@dimen/activity_horizontal_margin"
                android:bottom="@dimen/activity_vertical_margin"
                android:right="@dimen/activity_horizontal_margin"/>
            <corners android:bottomLeftRadius="@dimen/corner_radius"
                android:bottomRightRadius="@dimen/corner_radius"/>
            <solid android:color="@color/white"/>
        </shape>
    </item>
</layer-list>