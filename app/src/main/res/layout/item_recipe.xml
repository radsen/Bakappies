<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/card_view_vertical_margin"
    android:layout_marginBottom="@dimen/card_view_vertical_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    card_view:cardCornerRadius="@dimen/corner_radius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:paddingBottom="@dimen/card_view_horizontal_margin">

            <ImageView
                android:id="@+id/iv_recipe"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_view_image_height"
                android:scaleType="centerCrop"
                tool:src="@drawable/ic_bake_default" />

            <TextView
                android:id="@+id/tv_name"
                style="@style/Title"
                android:padding="@dimen/card_view_horizontal_margin"
                tool:text="@string/mock_recipe_name" />

            <TextView
                android:id="@+id/tv_servings"
                android:layout_gravity="right"
                style="@style/Subtitle"
                android:paddingStart="@dimen/card_view_horizontal_margin"
                android:paddingBottom="@dimen/card_view_vertical_margin"
                tool:text="@string/mock_servings" />

        </LinearLayout>

</android.support.v7.widget.CardView>
